  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Controller",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/manager/",
      "env": {
        "WATCH_NAMESPACE": "crd-poc",
        "CONTROLLER_CONGIG_MAP_NAMESPACE": "crd-poc",
      },
      "args": []
    },
    {
      "name": "Connect debug to local operator",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "port": 2345,
      "host": "127.0.0.1"
    },
    {
      "type": "java",
      "name": "Debug (Attach) - che-rest-apis",
      "request": "attach",
      "hostName": "localhost",
      "port": "5005"
    }
  ]
}